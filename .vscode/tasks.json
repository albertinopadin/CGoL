{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: clang++ build active file",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++17",
				"-fdiagnostics-color=always",
				"-Wall",
				"-g",
				"-I${workspaceFolder}/test-cpp/dependencies/include",
				// "${workspaceFolder}/test-cpp/dependencies/include/glad/glad.h",
				"-L${workspaceFolder}/test-cpp/dependencies/library",
				"${workspaceFolder}/test-cpp/dependencies/library/libglfw.3.3.dylib",
				"/opt/homebrew/Cellar/glfw/3.3.8/lib/libglfw.3.3.dylib",
				"/opt/homebrew/Cellar/glew/2.2.0_1/lib/libGLEW.2.2.0.dylib",
				// "${workspaceFolder}/test-cpp/test.cpp",
				"${workspaceFolder}/test-cpp/cherno.cpp",
				// "${workspaceFolder}/test-cpp/glad.c",
				"-o",
				"${workspaceFolder}/test-cpp/app",
				"-framework",
				"OpenGL",
				// "-lglew",
				// "-lglfw",
				// "-L/opt/homebrew/Cellar/glfw/3.3.7/lib/libglfw.3.3.dylib",
				// "-L/opt/homebrew/Cellar/glew/2.2.0_1/lib/libGLEW.2.2.0.dylib",
				"-framework",
				"Cocoa",
				"-framework",
				"IOKit",
				"-framework",
				"CoreVideo",
				"-framework",
				"CoreFoundation",
				"-Wno-deprecated"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: /usr/bin/clang++"
		}
	]
}